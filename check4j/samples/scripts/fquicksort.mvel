def quicksort(list) {
    list.size() <= 1 ? list :
        (pivot = list[0]; (quicksort(($ in list if $ < pivot)) + pivot)
            + quicksort(($ in list if $ > pivot)))
}

// create a list to sort
list = [5,2,4,1,18,10,15,1,0];

// sort it!
quicksort(list);